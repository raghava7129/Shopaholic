<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RateView"
    >

    <Toolbar
        android:id="@+id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/toolbar_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/back"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#007363"
                android:fontFamily="sans-serif-black"
                android:text="Rate your Experience"
                android:textSize="30sp"
                android:gravity="center"
                />

        </LinearLayout>

    </Toolbar>

    <ScrollView
        android:id="@+id/scroolView"
        android:layout_below="@id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <TextView
            android:id="@+id/rateTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Previous order"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textSize="35dp"
            android:gravity="center"
            android:textColor="#BFFF9800"
            />

        <ImageView
            android:id="@+id/rateImg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:background="@drawable/add_product_icon"
            />

        <TextView
            android:id="@+id/rateName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Iphone"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textSize="35dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/ratePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="â‚¹1,50,000"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textSize="35dp"
            android:gravity="center"
            />



        <TextView
            android:id="@+id/rating_1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate our Product Experience"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textSize="25dp"
            android:layout_marginStart="15dp"
            android:textColor="#B8A60A"
            android:layout_marginTop="15dp"
            />

        <RatingBar
            android:id="@+id/product_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numStars="5"
            android:rating="3.5"
            android:stepSize="0.5"
            android:isIndicator="false"
            android:progressTint="#FFD700"
            android:layout_centerHorizontal="true"
            />




        </LinearLayout>



    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="45dp"
        android:layout_below="@id/scroolView"
        android:padding="5dp"
        android:text="Submit your experience"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:background="@drawable/search_bar_bg"
        />

</RelativeLayout>